{
    "configurations": [
        {
            "name": "Linux (Qt6 - Ubuntu)",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include/x86_64-linux-gnu/qt6/**",  // Основные заголовки Qt6
                "/usr/lib/x86_64-linux-gnu/qt6/mkspecs/linux-g++"  // Для qmake
            ],
            "defines": [
                "QT_CORE_LIB",
                "QT_GUI_LIB",
                "QT_WIDGETS_LIB"  // Добавляйте другие модули по необходимости
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}